{
  "name": "ui-form-components",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/ui-form-components/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/ui-form-components/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/libs/ui-form-components"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/ui-form-components/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "component-test": {
      "executor": "@nx/cypress:cypress",
      "options": {
        "cypressConfig": "libs/ui-form-components/cypress.config.ts",
        "testingType": "component",
        "devServerTarget": "ui-form-components:build",
        "skipServe": true,
        "watch": true,
        "browser": "chrome"
      }
    },
    "component-test:ci": {
      "executor": "@nx/cypress:cypress",
      "options": {
        "cypressConfig": "libs/ui-form-components/cypress.config.ts",
        "testingType": "component",
        "devServerTarget": "ui-form-components:build",
        "skipServe": true,
        "watch": false,
        "browser": "chrome"
      }
    }
  }
}
