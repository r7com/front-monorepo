{
  "name": "ui-base-components",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/ui-base-components/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/ui-base-components/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit -p {projectRoot}/tsconfig.lib.json"
      }
    },
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/libs/ui-base-components"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "build-css": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tailwindcss -c libs/ui-base-components/tailwind.config.js --minify  -i libs/ui-base-components/src/style.css -o dist/libs/ui-base-components/style.css"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/ui-base-components/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "component-test": {
      "executor": "@nx/cypress:cypress",
      "options": {
        "cypressConfig": "libs/ui-base-components/cypress.config.ts",
        "testingType": "component",
        "devServerTarget": "ui-base-components:build",
        "skipServe": true,
        "watch": true,
        "browser": "chrome"
      },
      "configurations": {
        "ci": {
          "watch": false
        }
      }
    },
    "svg-sprite": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx svg-sprite --symbol --si=true --dest={projectRoot}/src/svg/compiled {projectRoot}/src/svg/*.svg"
      }
    },
    "generate-svg-types": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/generate-dynamic-types.js --inputFolder {projectRoot}/src/svg --outputFile {projectRoot}/src/components/svg-icon/svg-icon.types.ts --typeName SvgIcons"
      }
    },
    "show-svg-types": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/generate-dynamic-types.js --inputFolder {projectRoot}/src/svg --outputFile {projectRoot}/src/components/svg-icon/svg-icon.types.ts --typeName SvgIcons --showOnlyTypesTable"
      }
    },
    "show-svg-types-auto-fix": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/generate-dynamic-types.js --inputFolder {projectRoot}/src/svg --outputFile {projectRoot}/src/components/svg-icon/svg-icon.types.ts --typeName SvgIcons --showOnlyTypesTable --autoFix"
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "angular"
      }
    }
  },
  "implicitDependencies": ["ui-theme-core"]
}
