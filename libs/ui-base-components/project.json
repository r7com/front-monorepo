{
  "name": "ui-base-components",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/ui-base-components/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/ui-base-components/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/libs/ui-base-components"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/ui-base-components/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "component-test": {
      "executor": "@nx/cypress:cypress",
      "options": {
        "cypressConfig": "libs/ui-base-components/cypress.config.ts",
        "testingType": "component",
        "devServerTarget": "ui-base-components:build",
        "skipServe": true,
        "watch": true,
        "browser": "chrome"
      },
      "configurations": {
        "ci": {
          "watch": false
        }
      }
    },
    "storybook": {
      "executor": "@nx/storybook:storybook",
      "options": {
        "port": 6606,
        "configDir": "libs/ui-base-components/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@nx/storybook:build",
      "outputs": ["{options.outputDir}"],
      "options": {
        "outputDir": "dist/storybook/ui-base-components",
        "configDir": "libs/ui-base-components/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "generate-svg-types": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/generate-dynamic-types.js --inputFolder libs/ui-base-components/src/svg --outputFile libs/ui-base-components/src/components/svg-icon/svg-icon.types.ts --typeName SvgIcons"
      }
    },
    "show-svg-types": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/generate-dynamic-types.js --inputFolder libs/ui-base-components/src/svg --outputFile libs/ui-base-components/src/components/svg-icon/svg-icon.types.ts --typeName SvgIcons --showOnlyTypesTable"
      }
    },
    "show-svg-types-auto-fix": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/generate-dynamic-types.js --inputFolder libs/ui-base-components/src/svg --outputFile libs/ui-base-components/src/components/svg-icon/svg-icon.types.ts --typeName SvgIcons --showOnlyTypesTable --autoFix"
      }
    }
  },
  "implicitDependencies": ["ui-theme-core"]
}
